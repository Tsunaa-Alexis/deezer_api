{% extends 'base.html.twig' %}

{% block title %}Hello HomeController!{% endblock %}

{% block body %}
<a href="{{ path("addAllTrack", {"artist": artist.id }) }}">Ajouter tout</a>
<h1>Artiste : {{artist.name}}</h1>
<h2>Track enregistrer</h2>
<table class="table">
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">id</th>
      <th scope="col">Title</th>
      <th scope="col">Link</th>
      <th scope="col">Duration</th>
    </tr>
  </thead>
  <tbody>
    {% set a = 1 %}
    {% for track_db_n in track_db %}
        <tr>
            <th scope="row">{{a}}</th>
            <th scope="row">{{track_db_n.id}}</th>
            <td>{{track_db_n.title}}</td>
            <td><a href="{{track_db_n.link}}">{{track_db_n.link}}</a></td>
            <td>{{track_db_n.duration}}</td>
            {% set a = a + 1 %}
        </tr>
    {% endfor %}
  </tbody>
</table>

